{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "examples",
    ]
}
