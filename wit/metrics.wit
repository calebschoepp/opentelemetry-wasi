// Using the `exporter` as the bridge between host and guest:
// https://github.com/open-telemetry/opentelemetry-rust/blob/ade08cb1a3876da219a47760fe45abd075b7cd38/opentelemetry-sdk/src/metrics/exporter.rs
interface metrics {
    // use otel-common.{any, key-value, key, value};
    use wasi:clocks/wall-clock@0.2.0.{datetime};

    %export: func(metrics: resource-metrics) -> result<_, metric-error>;
    force-flush: func() -> result<_, metric-error>;
    shutdown: func() -> result<_, metric-error>;
    temporality: func() -> temporality-t;

    record resource-metrics {
        %resource: %resource,
        scope-metrics: list<scope-metrics>,
    }

    record %resource {
        inner: resource-inner,
    }

    record resource-inner {
        // TODO: not sure if this is the best way to handle this? The type listed in the `opentelemetry-sdk/resource/mod.rs` file is `HashMap<Key, Value>`
        // See https://github.com/open-telemetry/opentelemetry-rust/blob/ade08cb1a3876da219a47760fe45abd075b7cd38/opentelemetry-sdk/src/resource/mod.rs#L43
        attrs: list<key-value>,
        schema-url: option<string>,
    }

    record scope-metrics {
        scope: instrumentation-scope,
        metrics: list<metric>,
    }

    record instrumentation-scope {
        name: string,
        version: option<string>,
        schema-url: option<string>,
        attributes: list<key-value>,
    }

    // https://github.com/open-telemetry/opentelemetry-rust/blob/ade08cb1a3876da219a47760fe45abd075b7cd38/opentelemetry-sdk/src/metrics/data/mod.rs#L33
    record metric {
        name: string,
        description: string,
        unit: string,
        data: aggregation,
    }

    // TODO: Possible refactor could be to define a number variant and use that rather than a unique sum, gauge, histogram for each type
    variant aggregation {
        sum(sum),
        gauge(gauge),
        histogram(histogram),

        // TODO: Do we need to have this available here? I can't tell whether this would be an aggregation type or not: https://github.com/open-telemetry/opentelemetry-rust/blob/ade08cb1a3876da219a47760fe45abd075b7cd38/opentelemetry-sdk/src/metrics/data/mod.rs#L44
        // exponential-histogram(exponential-histogram),
    }

    variant aggregation-number {
        %f64(f64),
        %s64(s64),
        %u64(u64),
    }

    record sum {
        data-points: list<data-point>,
        temporality: temporality-t,
        is-monotonic: bool,
    }

    record gauge {
        data-points: list<data-point>,
    }

    record data-point {
        attributes: list<key-value>,
        start-time: option<datetime>,
        time: option<datetime>,
        value: aggregation-number,
        exemplars: list<exemplar>,
    }

    record exemplar {
        filtered-attributes: list<key-value>,
        time: datetime,
        value: aggregation-number,
        span-id: span-id,
        trace-id: trace-id,
    }

    /// The trace that this `span-context` belongs to.
    ///
    /// 16 bytes encoded as a hexadecimal string.
    type trace-id = string;

    /// The id of this `span-context`.
    ///
    /// 8 bytes encoded as a hexadecimal string.
    type span-id = string;

    record histogram {
        data-points: list<histogram-data-point>,
        temporality: temporality-t,
    }

    record histogram-data-point {
        attributes: list<key-value>,
        start-time: datetime,
        time: datetime,
        count: u64,
        bounds: list<f64>,
        bucket-counts: list<u64>,
        min: option<aggregation-number>,
        max: option<aggregation-number>,
        sum: aggregation-number,
        exemplars: list<exemplar>,
    }

    variant metric-error {
        other(string),
        config(string),
        invalid-instrument-configuration(string),
    }



    enum temporality-t {
        cumulative, // TODO: #[default] is used on this in the source code
        delta,
        low-memory,
    }

    /// A key-value pair describing an attribute.
    record key-value {
        /// The attribute name.
        key: key,
        /// The attribute value.
        value: value,
    }

    /// The key part of attribute `key-value` pairs.
    type key = string;

    /// The value part of attribute `key-value` pairs.
    variant value {
        /// A string value.
        %string(string),
        /// A boolean value.
        %bool(bool),
        /// A double precision floating point value.
        %f64(f64),
        /// A signed 64 bit integer value.
        %s64(s64),
        /// A homogeneous array of string values.
        string-array(list<string>),
        /// A homogeneous array of boolean values.
        bool-array(list<bool>),
        /// A homogeneous array of double precision floating point values.
        f64-array(list<f64>),
        /// A homogeneous array of 64 bit integer values.
        s64-array(list<s64>),
    }
}